<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCyanLight"
    tools:context="com.example.windzlord.brainfuck.screens.games.concentration.ConcenOne">

    <com.example.windzlord.brainfuck.layout.GameStatusLayout
        android:id="@+id/layout_game_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/layout_score"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@color/colorWhite" />

        <TextView
            android:id="@+id/textView_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textColor="@color/colorBlackLight"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_bonus"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="+0"
        android:textAlignment="viewEnd"
        android:textColor="@color/colorYellow"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/layout_game"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/layout_score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_left_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:background="@drawable/custom_corner_background_outline_game_chosen">

            <TextView
                android:id="@+id/textView_left_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorCyanDark"
                android:textSize="34sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_right_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:background="@drawable/custom_corner_background_outline_game_chosen">

            <TextView
                android:id="@+id/textView_right_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/colorCyanDark"
                android:textSize="34sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_game"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_corner_background_outline_game_chosen"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Left card - Number 'Even'   "
            android:textAlignment="viewEnd"
            android:textColor="@color/colorBlackLight"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="   Right card - Letter 'Vowel'"
            android:textAlignment="viewStart"
            android:textColor="@color/colorBlackLight"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_answer"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/answer_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:background="@drawable/custom_corner_background_answer_no">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="NO"
                android:textColor="@color/colorWhite"
                android:textSize="34sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/answer_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="50"
            android:background="@drawable/custom_corner_background_answer_yes">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="YES"
                android:textColor="@color/colorWhite"
                android:textSize="34sp" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_welcome"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/view_welcome_circle"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/custom_oval_background_outline_correct"
                android:padding="5dp"
                android:src="@color/colorYellow" />

            <TextView
                android:id="@+id/textView_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:text="3"
                android:textColor="@color/colorBlackLight"
                android:textSize="80sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:id="@+id/view_welcome_left"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@drawable/game_ic_welcome_left" />

        <View
            android:id="@+id/view_welcome_right"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:background="@drawable/game_ic_welcome_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_next"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:visibility="invisible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@color/colorYellow" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@drawable/game_ic_color_cross" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_pause"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="230dp"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_pause_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorYellow" />

            <View
                android:id="@+id/view_pause_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorYellow" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="PAUSE"
            android:textColor="@color/colorAccent"
            android:textSize="50sp"
            android:textStyle="bold" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button_back"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/game_ic_pause_circle_outline"
            app:cb_color="@color/colorCyanLight" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button_resume"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/game_ic_play_circle_outline"
            app:cb_color="@color/colorCyanLight" />

        <at.markushi.ui.CircleButton
            android:id="@+id/button_exit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:src="@drawable/game_ic_remove_circle_outline"
            app:cb_color="@color/colorCyanLight" />

    </RelativeLayout>

</RelativeLayout>
