<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GameLayout">
        <attr name="name" format="string" />
        <attr name="unlocked" format="boolean" />
        <attr name="level" format="integer" />
        <attr name="exp_current" format="integer" />
        <attr name="exp_nextlvl" format="integer" />
        <attr name="src" format="integer" />
        <attr name="score" format="integer" />
    </declare-styleable>

    <declare-styleable name="GameStatusLayout">
        <attr name="time_count" format="integer" />
        <attr name="time_max" format="integer" />
        <attr name="time_progress" format="integer" />
        <attr name="going_count" format="integer" />
        <attr name="going_max" format="integer" />
        <attr name="going_progress" format="integer" />
    </declare-styleable>

    <declare-styleable name="GameRankingLayout">
        <attr name="name_ranking" format="string" />
        <attr name="number" format="integer" />
        <attr name="score_ranking" format="integer" />
        <attr name="src_ranking" format="integer" />
    </declare-styleable>

</resources>